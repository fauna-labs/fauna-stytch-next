Query(
  Lambda(
    ["id"],
    Let(
      {
        user_set: Match(Index("user_by_id"), Var("id")),
        user: If(
          Exists(Var("user_set")),
          Get(Var("user_set")),
          'User Not Found'
        ),
        token: Create(Tokens(), {
          instance: Select(["ref"], Var("user")),
          data: { type: "access" },
          ttl: TimeAdd(Now(), Var("ttl"), "seconds")
        })
      },
      { user: Var("user"), access_token: Var("token") }
    )
  )
)